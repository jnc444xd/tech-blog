<div class="card mt-4 mb-4">
    <h2 class="card-header">{{post.name}}</h2>
    <span class="mt-4 mx-4">{{post.text}}</span><br>
    <span class="mx-4">Posted by {{post.user.name}} on {{format_date post.createdAt}}</span><br>
</div>
<div class="card mt-2 mb-2">
    <h3 class="card-header">Comments:</h3>
    {{#each post.comments as |comment|}}
    <div class="mt-3 mb-3 mx-4">
        <span>{{comment.text}}</span><br>
        <span>-- {{comment.user.name}}</span><br>
    </div>
    {{/each}}
</div>
<div class="card mt-4 mb-4">
    <label class="card-header">Comment</label><br>
    <textarea class="mb-4 mx-4" id="commentText" placeholder="Enter Comment Here"></textarea>
    <button class="button" id="commentBtn" data-id="{{post.id}}">Submit</button>
</div>
<script src="/js/comment.js"></script>