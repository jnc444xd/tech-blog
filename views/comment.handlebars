<div>
    <h2>{{post.name}}</h2>
    <span>{{post.text}}</span><br>
    <span>Posted by {{post.user.name}} on {{format_date post.createdAt}}</span><br>
</div>
<div>
    <h3>Comments:</h3>
    {{#each post.comments as |comment|}}
    <div>
        <span>{{comment.text}}</span><br>
        <span>-- {{comment.user.name}}</span><br>
    </div>
    {{/each}}
</div>
<div>
    <label>Comment</label><br>
    <textarea id="commentText" placeholder="Enter Comment Here"></textarea>
    <button id="commentBtn" data-id="{{post.id}}">Submit</button>
</div>
<script src="/js/comment.js"></script>